{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@types/*": ["src/types/*"],
      "@data/*": ["src/data/*"],
      "@utils/*": ["src/utils/*"],
      "@context/*": ["src/context/*"],
      "@lib/*": ["src/lib/*"],
      "@hooks/*": ["src/hooks/*"]
    }
  },
  "include": ["src"]
}

